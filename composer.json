{
    "name": "polderknowledge/entityservice-zend-paginator",
    "type": "library",
    "description": "This library provides Zend\\Paginator support for the polderknowledge/entityservice library",
    "keywords": [
        "polderknowledge",
        "entityservice-zend-paginator"
    ],
    "license": "MIT",
    "homepage": "https://polderknowledge.com",
    "require": {
        "php": "~5.5|~7.0",
        "polderknowledge/entityservice": "^3.0",
        "zendframework/zend-paginator": "^2.5|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7|^5.6",
        "polderknowledge/build-tools": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PolderKnowledge\\EntityService\\Paginator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PolderKnowledge\\EntityService\\PaginatorTest\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=ruleset.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=ruleset.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    }
}
